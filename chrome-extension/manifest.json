{
  "manifest_version": 3,
  "name": "AI Resume Optimizer",
  "version": "1.0.0",
  "description": "Optimize your resume for specific job descriptions with AI-powered matching",
  
  "permissions": [
    "storage",
    "activeTab",
    "debugger",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/viewjob*",
        "https://www.glassdoor.com/job-listing/*",
        "https://jobs.lever.co/*",
        "https://boards.greenhouse.io/*",
        "*://*/*job*",
        "*://*/*career*"
      ],
      "js": ["content/content-script.js"],
      "css": ["content/content-style.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup-build/index.html",
    "default_title": "AI Resume Optimizer"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

